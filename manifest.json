{

  "description": "Permet de sélectionner, déselectionner et rechercher des cours dans une page d'administration Moodle.",
  "manifest_version": 2,
  "name": "CourseSel",
  "version": "0.5",
  "homepage_url": "https://github.com/fxpar/courseSel/",
  "icons": {
    "48": "icons/Moodle.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/Moodle.png",
    "theme_icons": [{
        "light": "icons/Moodle.png",
        "dark": "icons/Moodle.png",
        "size": 32
    }],
    "default_title": "CourseSel",
    "default_popup": "popup/choose_beast.html"
  },

  "web_accessible_resources": [
    "icons/*.jpg"
  ]

}
